---
import "../styles/infopage.css";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter, file } = Astro.props;
console.log(Astro.props);
let title = frontmatter.title + " | Windows on Arm Ready Software";
let breadcrumbs = [{ href: `${Astro.url.pathname}`, title: frontmatter.title }];
if (frontmatter.title === "Homepage") {
  title = "Windows on Arm Ready Software";
  breadcrumbs = [];
}
---

<BaseLayout
  title={title}
  description={frontmatter.description}
  breadcrumbs={breadcrumbs}
